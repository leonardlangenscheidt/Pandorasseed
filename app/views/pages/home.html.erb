
<div class="row" style="padding-bottom:20px;">
	<div class="span8">
		<p>
			Experience the miracle of nature<br>
			Grow seeds without knowing what they'll become
		</p>

	</div>
	<div class="span4">
		<% if signed_in? %>
			<p>
				Click here to<br>
				<%= link_to 'Buy Seeds', buy_path, class: "btn btn-primary" %>
			</p>
		<% else %>
			<p>
				Click here to<br>
				<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
			</p>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="span12">
		<div style="text-align:center;">
			<%= image_tag 'closed-nos.png', class: 'steps step1' %>
			<%= image_tag 'arrow1.png', class: 'steps steps-arw' %>
			<%= image_tag 'supplies.png', class: 'steps step2' %>
			<%= image_tag 'arrow2.png', class: 'steps steps-arw' %>
			<%= image_tag 'questionpot.png', class: 'steps step3' %>
		</div>
	</div>
</div>

