<div class="row">
	<div class="span12">
		<p>this is the page where you buy seeds</p>

		<% if signed_in? %>

			<%= form_tag charges_path do %>
			  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
			          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
			          data-description="Pandora's Seed"
			          data-amount="1000"
			          data-email=<%=current_user.email%>></script>
			<% end %>

		<% else %>

			<p>Please <%= link_to "Sign In", new_user_session_path %> to continue!</p>

		<% end %>
	</div>
</div>
