<div class='row'>
	<div class='span12'>
		<h1>Orders</h1>
	</div>
</div>
<div class='row'>
	<div class='span12'>
		<h2>Outstanding</h2>
		<table class="table">
			<thead>
					<tr>
						<th>Order ID</th>
						<th>Date</th>
						<th>Email Address</th>
						<th>Address</th>
						<th>Premium</th>
						<th>Gift</th>
						<th>Shipped</th>
					</tr>
			</thead>
			<tbody>
				<% @orders.each do |order| %>
				<% if order.shipped == false %>
					<tr>
						<td><%=link_to order.id, "order/#{order.id}"%></td>
						<td><%=order.created_at.strftime "%d-%m-%Y"%></td>
						<td><%= link_to order.user.email, "mailto:#{order.user.email}", :target => '_blank'%></td>
						<td>
							<%=order.name%><br>
							<%=order.street1%><br>
							<%=order.street2%><br>
							<%=order.zip%> <%=order.city%>, <%=order.state%>
						</td>
						<td>
							<% if order.premium == true %>YES
							<% else%>NO<%end%>
						</td>
						<td>
							<% if order.gift == true %>YES
							<% else%>NO<%end%>
						</td>
						<td><%= link_to "Shipped it!", "/ship/#{order.id}" %></td>
					</tr>
				<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<div class='row'>
	<div class='span12'>
		<h2>Filled</h2>
		<table class="table">
			<thead>
					<tr>
						<th>Order ID</th>
						<th>Date</th>
						<th>Email Address</th>
						<th>Address</th>
						<th>Premium</th>
						<th>Gift</th>
						<th>Shipped</th>
					</tr>
			</thead>
			<tbody>
				<% @orders.each do |order| %>
				<% if order.shipped == true %>
					<tr>
						<td><%=link_to order.id, "order/#{order.id}"%></td>
						<td><%=order.created_at.strftime "%d-%m-%Y"%></td>
						<td><%= link_to order.user.email, "mailto:#{order.user.email}", :target => '_blank'%></td>
						<td>
							<%=order.name%><br>
							<%=order.street1%><br>
							<%=order.street2%><br>
							<%=order.zip%> <%=order.city%>, <%=order.state%>
						</td>
						<td>
							<% if order.premium == true %>YES
							<% else%>NO<%end%>
						</td>
						<td>
							<% if order.gift == true %>YES
							<% else%>NO<%end%>
						</td>
						<td>Shipped on <%= order.updated_at.strftime "%d-%m-%Y"%> </td>
					</tr>
				<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
