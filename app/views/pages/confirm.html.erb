<div class='row'>
	<div class='span12'>
		<table>
			<tr>
				<td>Name:</td>
				<td><%=@name%></td>
			</tr>
			<tr>
				<td>Street:</td>
				<td><%=@street%></td>
			</tr>
			<tr>
				<td>ZIP Code:</td>
				<td><%=@zip%></td>
			</tr>
			<tr>
				<td>City:</td>
				<td><%=@city%></td>
			</tr>
			<tr>
				<td>State:</td>
				<td><%=@state%></td>
			</tr>
			<tr>
				<td colspan='2'>
					I want <%= @premium%>
					<% if @premium=='true'%>
						the full setup... premium!
					<%else%>
						just the seeds. not the first time I'm gardening.
					<%end%>
				</td>
			</tr>
			<tr>
				<td colspan='2'>
					<% if @gift=='true'%>
						This is a gift</td></tr>
						<tr>
							<td colspan='2'>
								<%= @message %>
					<%else%>
						This is for myself
					<%end%>
				</td>
			</tr>
		</table>
		<% if @premium == 'true' %>
			<%= form_tag charges_path(:name=>@name, :street1=>@street1, :street2=>@street2, :city=>@city, :state=>@state, :zip=>@zip, :gift=>@gift, :premium=>@premium, :message=>@message ) do%>
			  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
			          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
			          data-description="Pandora's Seed"
			          data-amount="2500"
			          data-email=<%=current_user.email%>></script>
			<% end %>
		<% else %>
			<%= form_tag charges_path(:name=>@name, :street1=>@street1, :street2=>@street2, :city=>@city, :state=>@state, :zip=>@zip, :gift=>@gift, :premium=>@premium, :message=>@message ) do%>
			  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
			          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
			          data-description="Pandora's Seed"
			          data-amount="1000"
			          data-email=<%=current_user.email%>></script>
		          <% end %>
		<% end %>
	</div>
</div>
